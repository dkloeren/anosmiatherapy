<div class="container" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.0) 30%);">
  <div class="section-container">
    <p class="section-category">TRAINING</p>
    <h1 class="section-title">Uncovered scent</h1>
  </div>
</div>


<!-- Slider active-->
<div class="scrolling-wrapper">
  <% current_user.current.each do |program| %>
  <%= render "sliding_card", locals: {training_id: program.id}  %>
  <% end %>
</div>


<!-- >> Button -->
<div class="container flex-tiles " id="btn-start-training-session">
  <div class="d-flex mt-3 justify-content-center">
    <% if current_user.active.present? %>
      <div>
        <%= link_to "Start Training", start_smell_program_smell_entries_path(current_user.active[0]),
                                      class: 'btn-new-show', id: "btn-start-training-session" %>
      </div>
    <% else %>
      <!-- <p>You have completed this training session</p> -->
      <div>
        <%= link_to "Train again", dashboard_path(reset: true), class: 'btn-new-show'%>
      </div>
    <% end %>
    <!-- option: swtich programs -->
    <% if current_user.completed_candidates.present? %>
      <div>
        <%= link_to "New Scent", dashboard_path(replace_trainings: true),
            class: 'btn-new-show ', id: "btn-new-training-session" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Section -->
<div class="container">
  <div class="section-container">
    <p class="section-category section-positioning">TRAINING</p>
    <h1 class="section-title">Recovered scent</h1>
