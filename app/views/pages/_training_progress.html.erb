 <% if locals[:format] == 'tile' %>
  <!-- Training / 4 x 4 tiles -->
  <div class="training-tile <%= "#{locals[:side]} #{locals[:stack]}" %>" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.15) 50%) , url('<%= cl_image_path locals[:training].scent.photo.key, height: 300, crop: :fill %>')">
  <div class="program-info d-flex justify-content-between mb-0">
    <div><h3 class="program-title mb-0"><%= locals[:training].scent.name.capitalize %></h3></div>
    <div class="nr-entries"><p><%= locals[:training].smell_entries.length %></p></div>
  </div>
  <div class="chart mt-3">
    <%= render "ts_block_progress", locals: {training: locals[:training], scale_height: 5, width: 132}  %>
  </div>
  </div>

 <% elsif locals[:format] == 'carousel' %>
   <div class="training-carousel" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.15) 50%) , url('<%= cl_image_path locals[:training].scent.photo.key, height: 300, crop: :fill %>')">
    <div class="program-info d-flex justify-content-between mb-0">
      <div><h3 class="program-title mb-0"><%= locals[:training].scent.name.capitalize %></h3></div>
      <div class="nr-entries"><p><%= locals[:training].smell_entries.length %></p></div>
    </div>
    <div class="chart mt-3 d-flex justify-content-center">
      <%= render "ts_block_progress", locals: {training: locals[:training], scale_height: 7, width: 200}  %>
    </div>
   </div>

<% elsif locals[:format] == 'band' %>
  <!-- bands tiles -->
  <div class="completed-tile" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.1) 40%), url('<%= cl_image_path locals[:training].scent.photo.key, height: 300, crop: :fill %>')">
    <div class="d-flex justify-content-between align-items-center px-3 py-1" style="align-items: baseline;">
      <div><h3 class="program-title mb-0"><%= locals[:training].scent.name.capitalize %></h3></div>
        <div class="mt-3">
          <%= render "ts_block_progress", locals: {training: locals[:training], scale_height: 5, width: 200}  %>
        </div>
      <!-- <div class="nr-entries"><p><%#= locals[:training].smell_entries.length %></p></div> -->
    </div>
  </div>
<% end %>
