 <div class="training-tile <%= locals[:side] %>" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path locals[:training].scent.photo.key, height: 300, crop: :fill %>')">

  <div class="d-flex justify-content-between mb-0">
    <div><h3 class="mb-0"><%= locals[:training].scent.name.capitalize %></h3></div>
    <div class="nr-entries"><p><%= locals[:training].smell_entries.length %></p></div>
  </div>

  <div class="h-100 mt-3">
    <div class="d-flex flex-column justify-content-center">
      <div>

        <div class="d-flex justify-content-start align-items-end dashboard-tile-data">
          <% locals[:training].smell_entries.each do |entry| %>
            <div class="strength-data" style="height:<%= entry.strength_rating * 5 %>px; width: <%=  %> "></div>
          <% end %>
        </div>

        <div class="d-flex justify-content-start align-items-start dashboard-tile-data">
          <% locals[:training].smell_entries.each do |entry| %>
            <div class="accuracy-data" style="height:<%= entry.accuracy_rating * 5 %>px; width: <%=  %> "></div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
 </div>
