<div class="container">
  <p class="section-category" id="section-title">PRODUCTS</p>
  <h2 id="shop-header">Shop</h2>
  <div class="shop-cards">
    <% @products.each do |product| %>
        <div class="card-shop">
          <div class="card-title">
              <h5><%= product.name %></h5>
            <%= link_to "Buy", product_path(product), class: "btn-new-index" %>
          </div>
          <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(product.photo.key, height: 200, crop: :fill) %>')">
            <%# raise %>
            <div class="card-price">
              <p><%= humanized_money_with_symbol(product.price) %></p>
            </div>
              <%= cl_image_tag product.photo.key, class: "card-img-bottom" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
