<div class="container">
  <h1>Products</h1>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-6 col-md-4">
        <div class="card">
          <%= image_tag "https://images.unsplash.com/photo-1592685776885-97a964ad8293?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80", class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.product_type.name %></p>
            <%= link_to "More details", product_path(product), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      <p>Amount: <%= humanized_money_with_symbol(product.price) %></p>
    <% end %>
  </div>
</div>
