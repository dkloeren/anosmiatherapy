<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag("https://images.unsplash.com/photo-1592685776885-97a964ad8293?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80", width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @product.name %></h1>
      <p>Some awesome description of our amazing products.</p>
      <p>$$$</p>
    </div>
  </div>
</div>

<p>Amount: <%= humanized_money_with_symbol(@product.price) %></p>

<%= form_tag orders_path do %>
  <%= hidden_field_tag 'product_id', @product.id %>
  <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
<% end %>
