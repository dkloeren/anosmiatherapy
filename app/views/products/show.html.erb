<div class="container py-3">
  <div class="row">
    <!-- <div class="col-sm-12 col-md-6"> -->
    <div class="p-image">
      <%= image_tag("https://images.unsplash.com/photo-1592685776885-97a964ad8293?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80", width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h2 id="show-header"><%= @product.name %></h2>
      <p>Individual scent bottle.</p>
      <p>Designed and produced in Berlin, Germany.</p>
      <p>Delivery in EU & International.</p>
      <p><%= humanized_money_with_symbol(@product.price) %></p>
      <%= form_tag orders_path do %>
      <%= hidden_field_tag 'product_id', @product.id %>
      <%= submit_tag 'Purchase', class: 'btn-submit' %>
      <% end %>
    </div>
  </div>
</div>
