<div class="container">
  <p class="section-category" id="sec-order-title">ORDERS</p>
  <h2 id="shop-header">History</h2>
  <div class="shop-cards">
    <% @orders.each do |order| %>
      <div class="order-card">
        <%#= cl_image_tag order.product.photo.key %>
        <%= link_to order_path(order) do %>
        <%= cl_image_tag order.product.photo.key, crop: :fill, class: "order-img" %>
      <% end %>
        <div class="li-order-history">
          <h4 class="order-id">Order Number #<%= order.id %></h4>
          <p class="order-date">Order Date: <%= order.created_at.to_date %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
