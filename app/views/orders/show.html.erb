<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%#= image_tag @order.product.photo_url, width: '100%' %></div>
    <div class="col">
      <h2>Order Number #<%= @order.id %> <p></p><small><span class="badge badge-primary"><%= @order.state %></span></small></h2>
     <p></p>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>PRODUCT</strong> <%= @order.product.name %> [<%= @order.product_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
      </ul>
     <p></p>
      <p>Estimated delivery in <strong>2 business days</strong></p>
      <div class ="btn-orders">
        <%= link_to "Return to dashboard", root_path, class: "btn-new-index" %>
    </div>
    </div>
  </div>
</div>
